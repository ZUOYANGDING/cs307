<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_landing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"

    tools:context="com.example.zuoyangding.aroundme.Activity.LandingActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/top_bar"
        android:id="@+id/top_bar">

        <ImageView
            android:layout_height="match_parent"
            app:srcCompat="@drawable/profile_and_settings"
            android:id="@+id/imageView2"
            android:layout_marginLeft="90dp"
            android:scaleType="centerCrop"
            android:layout_width="250dp" />

        <Button
            android:layout_below="@+id/enterIntroLayout"
            android:layout_toEndOf="@+id/introLayout"
            android:id="@+id/landing_Edit"
            android:background="@drawable/edit_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp" />


    </LinearLayout>


    <!--<EditText-->
        <!--android:id="@+id/etUploadName"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content" />-->

    <!--<Button-->
        <!--android:id="@+id/bUploadName"-->
        <!--android:text="Change Avatar"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content" />-->

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/nicknameLayout"
        android:layout_marginLeft="40dp"
        android:layout_width="350dp"
        android:background="@drawable/profile_button"
        android:layout_below="@+id/profile_picture"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:layout_height="60dp">

        <TextView
            android:text="Nickname"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/nickname"
            android:textSize="24sp"
            android:textColor="#B9A336"
            android:fontFamily="sans-serif"
            android:layout_width="144dp" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/landing_Nickname"
            android:textSize="24sp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:fontFamily="sans-serif"
            android:layout_alignTop="@+id/enterNicknameLayout"
            android:layout_alignStart="@+id/enterBirthdayLayout"
            android:layout_above="@+id/enterBirthdayLayout"
            android:layout_alignEnd="@+id/enterNicknameLayout"
            android:gravity="center"
            android:layout_weight="1" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/birthdayLayout"
        android:layout_marginLeft="40dp"
        android:layout_width="350dp"
        android:background="@drawable/profile_button"
        android:layout_below="@+id/nicknameLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_height="60dp">

        <TextView
            android:text="Birthday"
            android:layout_width="146dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/birthday"
            android:textSize="24sp"
            android:textColor="#B9A336" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/landing_Birthday"
            android:textSize="24sp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:layout_weight="1" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/introLayout"
        android:layout_marginLeft="40dp"
        android:layout_width="350dp"
        android:background="@drawable/profile_button"
        android:layout_below="@+id/birthdayLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_height="60dp">

        <TextView
            android:text="Intro"
            android:layout_width="144dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/intro"
            android:textSize="24sp"
            android:textColor="#B9A336" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/landing_intro"
            android:textSize="24sp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:layout_weight="1" />


    </LinearLayout>

    <Button
        android:id="@+id/button3"
        android:layout_width="350dp"
        android:text="home page"
        android:background="@drawable/profile_button_dark"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_below="@+id/introLayout"
        android:layout_alignStart="@+id/introLayout"
        android:layout_marginTop="15dp"
        android:layout_height="60dp" />

    <Button
        android:id="@+id/logout_bt"
        android:layout_width="350dp"
        android:text="LogOut"
        android:background="@drawable/log_out_button"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_below="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:layout_marginTop="15dp"
        android:layout_height="60dp" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/profile_picture"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        app:srcCompat="@drawable/avatar"
        android:background="@null"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true" />

    <!--android:layout_below="@+id/etUploadName"-->
    <!--android:layout_below="@+id/bUploadName"-->



</RelativeLayout>

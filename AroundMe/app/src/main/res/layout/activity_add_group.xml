<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_group"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.zuoyangding.aroundme.Activity.add_group">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/topBar"
        android:background="@drawable/top_bar">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/back_button"
            android:id="@+id/imageButton2"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp" />

        <ImageView
            android:layout_height="60dp"
            app:srcCompat="@drawable/create_new_group"
            android:id="@+id/imageView"
            android:layout_width="260dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/bottomBar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/bottom_bar">

        <Button
            android:layout_height="60dp"
            android:id="@+id/createGroup"
            android:background="@drawable/create_group"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="24sp"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:layout_below="@+id/enterGroupName"
            android:layout_alignStart="@+id/enterGroupName"
            android:layout_width="240dp"
            android:layout_marginLeft="70dp" />
    </LinearLayout>

    <TextView
        android:text="Group name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:id="@+id/groupName"
        android:textSize="24sp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:layout_below="@+id/topBar"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="22dp"
        android:id="@+id/enterGroupName"
        android:hint="Enter group name"
        android:textSize="24sp"
        android:layout_below="@+id/groupName"
        android:layout_alignStart="@+id/groupName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/Topics"
        android:hint="Enter Topics"
        android:layout_marginTop="67dp"
        android:textSize="24sp"
        android:layout_below="@+id/enterGroupName"
        android:layout_alignStart="@+id/enterGroupName" />

</RelativeLayout>
